GEMINI_API_KEY=your_key_here

# ChromaDB persistence
CHROMA_PERSIST_DIR=./chroma_store
COLLECTION_NAME=shortlisting_dataset

# Ingestion chunking
CHUNK_TOKENS=800
CHUNK_OVERLAP=100
PARENT_CHUNK_SIZE=1024
STANDARD_CHUNK_SIZE=512
MICRO_CHUNK_SIZE=256
STANDARD_CHUNK_OVERLAP=128
MICRO_CHUNK_OVERLAP=64

# Performance
BATCH_SIZE=64
MAX_WORKERS=10
EMBEDDING_BATCH_SIZE=100
EMBED_MAX_WORKERS=10

# Dataset location (choose one; directory preferred)
# Preferred: point to your Shortlisting Dataset directory (with space)
DATASET_DIR=./Shortlisting Dataset
# Alternative: zip archive containing .txt files (if you use one)
DATASET_ZIP=./shortlisting_dataset.zip

# Querying
QUERIES_PATH=./Queries.json
QUERY_BATCH_SIZE=10
DENSE_TOP_K_PER_QUERY=20
SPARSE_TOP_K=100
FINAL_TOP_K=5
DIVERSITY_LAMBDA=0.75
NUM_QUERY_VARIATIONS=1
USE_BM25=0
QUERY_MAX_WORKERS=64
SHARD_TOTAL=1
SHARD_INDEX=0

# Fast mode flags (set to 1 for maximum speed)
FAST_MODE=1
SKIP_RERANK=1
CHROMA_BATCH_SIZE=50

# GPU-accelerated embeddings (L4 GPU supported)
# Set USE_GPU_EMBEDDINGS=1 to use local GPU (sentence-transformers)
USE_GPU_EMBEDDINGS=1
GPU_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
GPU_BATCH_SIZE=256

# Embedding model (Gemini; used only if USE_GPU_EMBEDDINGS=0)
EMBEDDING_MODEL=text-embedding-004

